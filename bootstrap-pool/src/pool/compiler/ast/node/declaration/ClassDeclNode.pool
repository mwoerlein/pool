namespace pool::compiler::ast::node::declaration;

use pool::compiler::ast::Node;
use pool::compiler::ast::Visitor;
use sys::core::String;
use sys::stream::OStream;

class ClassDeclNode extends Node {

    String name;

    [] __init() {
        name = this.createOwn(String:CLASSNAME);
    }
    
    [ClassDeclNode] setName(String name) { this.name.assignString(name); return this; }
    
    // NODE
    [int] accept(Visitor visitor) { return visitor.visitClassDecl(this); }
    [OStream] printDebugName(OStream stream) {
        return stream.printCString("class-<").print(name).printChar('>');
    }
}
