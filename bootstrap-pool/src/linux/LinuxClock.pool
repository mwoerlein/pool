namespace linux;

class LinuxClock extends sys::time::Clock {
    
    [] sleep(int sec, int nsec) {
        SysCall:nanoSleep(sec, nsec);
    }
    
    [int, int] getTimestamp() {
        [int sec, int usec] := SysCall:getTimeOfDay();
        return [sec, usec*1000];
    }
}
